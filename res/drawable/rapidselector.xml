<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
	    <!-- ビューが使用不可になっているときは「droid_disabl.png」を表示 -->
        <item
            android:state_enabled="false"
            android:drawable="@drawable/ana" />
 
        
        <!-- ビューがタッチされているときは「droid_press.png」を表示 -->
        <item
            android:state_pressed="true"
            android:drawable="@drawable/yararere1" />
 
        <!-- ビューが タッチされていないときは「droid_normal.png」を表示 -->
        <item
            android:state_pressed="false"
            android:state_enabled="true"
            android:drawable="@drawable/rapidmogura" />

</selector>